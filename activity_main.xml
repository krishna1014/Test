<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider2"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="38dp"
        android:layout_toRightOf="@id/Name"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/eve"
        android:layout_width="209dp"
        android:layout_height="46dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="277dp"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:text="@string/event"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/Raise"
        android:layout_width="146dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="172dp"
        android:layout_marginLeft="172dp"
        android:padding="10dp"
        android:text="@string/fire" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        />




    <TextView
        android:id="@+id/Email"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:paddingTop="20dp"
        android:paddingLeft="10dp"
        android:text="E'ID"
        />


    <TextView
        android:id="@+id/Name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-1dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="-3dp"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:text="NAME" />

    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider2"
        android:layout_toRightOf="@id/Name"
        android:ems="10"
        android:inputType="textPersonName"
        android:importantForAutofill="no" />


    <Button
        android:id="@+id/loginbutton"
        android:layout_width="145dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@id/push_profile"
        android:text="Login" />

    <Button
        android:id="@+id/AppInbox"
        style="@android:style/Widget.Button.Small"
        android:layout_width="146dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="127dp"
        android:layout_marginEnd="91dp"
        android:layout_marginRight="91dp"
        android:background="#9F3A3A3A"
        android:fadingEdge="horizontal|vertical|none"
        android:text="@string/inbox"
        android:textColor="#FFEBEE"
        android:textColorLink="#00FFFFFF" />

    <Button
        android:id="@+id/push_profile"
        android:layout_width="145dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="8dp"
        android:text="Push Profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/AppInbox"
        app:layout_constraintStart_toEndOf="@+id/loginbutton" />

</RelativeLayout>
